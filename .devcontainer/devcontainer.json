// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	// Instead use Dockerfile
	"build": { "dockerfile": "Dockerfile" },
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"charliermarsh.ruff",
				"valentjn.vscode-ltex"
			],
			"settings": {
				"editor.defaultFormatter": "charliermarsh.ruff"
			}
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.

	"postCreateCommand": "pip install -r requirements-lock.txt && pip install --no-deps -e .",
	
	// Configure git commit.template to say "Snapshot"
	"postStartCommand": "echo '#Snapshot' > ~/.gitmessage; git config --global commit.template ~/.gitmessage;",

	// Mount host timezone (https://github.com/microsoft/vscode-dev-containers/issues/307#issuecomment-1638434058)
	"mounts": [
		"source=/etc/localtime,target=/usr/share/zoneinfo/hostlocaltime,type=bind,readonly",
		"source=${localEnv:HOME}/.hf_token,target=/home/vscode/.hf_token,type=bind,readonly",
		"source=${localEnv:HOME}/.netrc,target=/home/vscode/.netrc,type=bind,readonly"
	],

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
